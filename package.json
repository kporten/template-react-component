{
  "name": "template-react-component",
  "version": "3.0.3",
  "private": false,
  "license": "MIT",
  "description": "Template to develop a React component",
  "repository": "https://github.com/kporten/template-react-component.git",
  "bugs": "https://github.com/kporten/template-react-component/issues",
  "author": "Kevin Porten <hello@kevinporten.dev>",
  "scripts": {
    "start": "start-storybook --port 9009",
    "start:ci": "start-storybook --ci --quiet --port 9009",
    "test": "jest --watch --notify",
    "test:all": "jest --watchAll --coverage --notify",
    "test:ci": "jest --ci --runInBand --coverage",
    "e2e": "cypress open",
    "e2e:run": "cypress run --record",
    "e2e:ci": "start-server-and-test start:ci 9009 e2e:run",
    "lint": "eslint --ignore-path .gitignore --ext .js,.jsx,.ts,.tsx .",
    "hint": "hint ./src/lib",
    "type-check": "tsc --project ./tsconfig.json && tsc --project ./cypress/tsconfig.json",
    "changelog": "auto-changelog --package --template keepachangelog --sort-commits relevance",
    "build": "rimraf dist && rollup -c",
    "build:storybook": "build-storybook",
    "commit": "git-cz",
    "version": "yarn build && yarn changelog && git add CHANGELOG.md",
    "postversion": "git push --follow-tags && yarn publish --non-interactive"
  },
  "main": "./dist/lib/index.cjs.js",
  "module": "./dist/lib/index.es.js",
  "files": [
    "dist/lib"
  ],
  "dependencies": {},
  "peerDependencies": {
    "react": "*",
    "react-dom": "*"
  },
  "devDependencies": {
    "@babel/core": "^7.12.3",
    "@babel/preset-env": "^7.12.1",
    "@babel/preset-react": "^7.12.5",
    "@babel/preset-typescript": "^7.12.1",
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@rollup/plugin-commonjs": "^16.0.0",
    "@rollup/plugin-node-resolve": "^10.0.0",
    "@rollup/plugin-url": "^5.0.1",
    "@storybook/addon-a11y": "^6.1.0-rc.0",
    "@storybook/addon-essentials": "^6.1.0-rc.0",
    "@storybook/react": "^6.1.0-rc.0",
    "@svgr/rollup": "^5.4.0",
    "@testing-library/cypress": "^7.0.1",
    "@testing-library/dom": "^7.26.6",
    "@testing-library/jest-dom": "^5.11.5",
    "@testing-library/react": "^11.1.2",
    "@testing-library/react-hooks": "^3.4.2",
    "@testing-library/user-event": "^12.2.2",
    "@types/jest": "^26.0.15",
    "@types/react": "^16.9.56",
    "@types/react-dom": "^16.9.9",
    "@typescript-eslint/eslint-plugin": "^4.7.0",
    "@typescript-eslint/parser": "^4.7.0",
    "@wessberg/rollup-plugin-ts": "^1.3.8",
    "auto-changelog": "^2.2.1",
    "babel-plugin-module-resolver": "^4.0.0",
    "commitizen": "^4.2.2",
    "cypress": "^5.6.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.13.0",
    "eslint-config-airbnb-typescript": "^12.0.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-cypress": "^2.11.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.3",
    "eslint-plugin-jest-dom": "^3.2.4",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-testing-library": "^3.10.0",
    "eslint-plugin-unicorn": "^23.0.0",
    "hint": "^6.1.1",
    "husky": "^4.3.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^26.6.3",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-is": "^17.0.1",
    "react-test-renderer": "^17.0.1",
    "rimraf": "^3.0.2",
    "rollup": "^2.33.1",
    "rollup-plugin-subpath-externals": "^3.4.0",
    "start-server-and-test": "^1.11.5",
    "typescript": "^4.2.0-dev.20201112"
  }
}
