{
  "name": "template-react-component",
  "version": "1.2.5",
  "private": false,
  "license": "MIT",
  "description": "Template to develop a React component",
  "repository": "https://github.com/kporten/template-react-component.git",
  "bugs": "https://github.com/kporten/template-react-component/issues",
  "author": "Kevin Porten <hello@kevinporten.dev>",
  "scripts": {
    "start": "react-scripts start",
    "test": "react-scripts test --watch --notify",
    "test:all": "react-scripts test --watchAll --coverage --collectCoverageFrom 'src/lib/**/*.tsx' --notify",
    "test:ci": "CI=true react-scripts test",
    "lint": "eslint --ignore-path .gitignore --ext .js,.jsx,.ts,.tsx .",
    "hint": "hint ./src/lib",
    "type-check": "tsc --project ./tsconfig.json",
    "changelog": "auto-changelog --package --template keepachangelog --sort-commits relevance",
    "docs": "rimraf docs && typedoc ./src/lib",
    "build": "rimraf dist && yarn build:declaration && yarn build:bundle",
    "build:bundle": "rollup -c",
    "build:declaration": "tsc --project tsconfig.build.json --noEmit false --emitDeclarationOnly && rimraf dist/*.d.ts",
    "commit": "git-cz",
    "version": "yarn build && yarn changelog && yarn docs && git add CHANGELOG.md docs/*",
    "postversion": "git push --follow-tags && yarn publish --non-interactive"
  },
  "main": "./dist/lib/index.cjs.js",
  "module": "./dist/lib/index.es.js",
  "types": "./dist/lib/index.d.ts",
  "files": [
    "dist/lib"
  ],
  "dependencies": {},
  "peerDependencies": {
    "react": "*",
    "react-dom": "*"
  },
  "devDependencies": {
    "@babel/core": "^7.11.0",
    "@babel/preset-env": "^7.10.4",
    "@babel/preset-react": "^7.10.4",
    "@babel/preset-typescript": "^7.10.4",
    "@commitlint/cli": "^9.1.1",
    "@commitlint/config-conventional": "^9.1.1",
    "@rollup/plugin-babel": "^5.1.0",
    "@rollup/plugin-commonjs": "^14.0.0",
    "@rollup/plugin-node-resolve": "^8.4.0",
    "@testing-library/dom": "^7.21.7",
    "@testing-library/jest-dom": "^5.11.2",
    "@testing-library/react": "^10.4.7",
    "@testing-library/react-hooks": "^3.4.1",
    "@testing-library/user-event": "^12.1.0",
    "@types/jest": "^26.0.8",
    "@types/react": "^16.9.44",
    "@types/react-dom": "^16.9.8",
    "@typescript-eslint/eslint-plugin": "^3.7.1",
    "@typescript-eslint/parser": "^3.7.1",
    "auto-changelog": "^2.2.0",
    "commitizen": "^4.1.2",
    "cz-conventional-changelog": "^3.2.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-typescript": "^9.0.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jest": "^23.20.0",
    "eslint-plugin-jest-dom": "^3.1.4",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.20.5",
    "eslint-plugin-react-hooks": "^4.0.8",
    "eslint-plugin-testing-library": "^3.4.0",
    "eslint-plugin-unicorn": "^21.0.0",
    "hint": "^6.0.7",
    "husky": "^4.2.5",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-scripts": "^3.4.1",
    "react-test-renderer": "^16.13.1",
    "rimraf": "^3.0.2",
    "rollup": "^2.23.0",
    "typedoc": "^0.17.8",
    "typedoc-plugin-markdown": "^2.3.1",
    "typescript": "^3.9.7"
  },
  "resolutions": {
    "@typescript-eslint/parser": "^3.7.0"
  }
}
