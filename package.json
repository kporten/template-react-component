{
  "name": "template-react-component",
  "version": "2.0.1",
  "private": false,
  "license": "MIT",
  "description": "Template to develop a React component",
  "repository": "https://github.com/kporten/template-react-component.git",
  "bugs": "https://github.com/kporten/template-react-component/issues",
  "author": "Kevin Porten <hello@kevinporten.dev>",
  "scripts": {
    "start": "start-storybook -p 9000",
    "test": "jest --watch --notify",
    "test:all": "jest --watchAll --coverage --notify",
    "test:ci": "jest --ci",
    "lint": "eslint --ignore-path .gitignore --ext .js,.jsx,.ts,.tsx .",
    "hint": "hint ./src/lib",
    "type-check": "tsc --project ./tsconfig.json --noEmit",
    "changelog": "auto-changelog --package --template keepachangelog --sort-commits relevance",
    "build": "rimraf dist && rollup -c",
    "build:storybook": "build-storybook",
    "commit": "git-cz",
    "version": "yarn build && yarn changelog && git add CHANGELOG.md",
    "postversion": "git push --follow-tags && yarn publish --non-interactive"
  },
  "main": "./dist/lib/index.cjs.js",
  "module": "./dist/lib/index.es.js",
  "files": [
    "dist/lib"
  ],
  "dependencies": {},
  "peerDependencies": {
    "react": "*",
    "react-dom": "*"
  },
  "devDependencies": {
    "@babel/core": "^7.11.1",
    "@babel/preset-env": "^7.11.0",
    "@babel/preset-react": "^7.10.4",
    "@babel/preset-typescript": "^7.10.4",
    "@commitlint/cli": "^9.1.2",
    "@commitlint/config-conventional": "^9.1.2",
    "@rollup/plugin-commonjs": "^15.0.0",
    "@rollup/plugin-node-resolve": "^9.0.0",
    "@rollup/plugin-url": "^5.0.1",
    "@storybook/addon-a11y": "^6.0.12",
    "@storybook/addon-actions": "^6.0.12",
    "@storybook/addon-backgrounds": "^6.0.12",
    "@storybook/addon-controls": "^6.0.12",
    "@storybook/addon-docs": "^6.0.12",
    "@storybook/addon-toolbars": "^6.0.12",
    "@storybook/addon-viewport": "^6.0.12",
    "@storybook/addons": "^6.0.12",
    "@storybook/react": "^6.0.12",
    "@storybook/theming": "^6.0.12",
    "@svgr/rollup": "^5.4.0",
    "@svgr/webpack": "^5.4.0",
    "@testing-library/dom": "^7.22.2",
    "@testing-library/jest-dom": "^5.11.3",
    "@testing-library/react": "^10.4.8",
    "@testing-library/react-hooks": "^3.4.1",
    "@testing-library/user-event": "^12.1.1",
    "@types/jest": "^26.0.10",
    "@types/react": "^16.9.46",
    "@types/react-dom": "^16.9.8",
    "@typescript-eslint/eslint-plugin": "^3.9.1",
    "@typescript-eslint/parser": "^3.9.1",
    "@wessberg/rollup-plugin-ts": "^1.3.2",
    "auto-changelog": "^2.2.0",
    "babel-loader": "^8.1.0",
    "commitizen": "^4.1.2",
    "cz-conventional-changelog": "^3.2.0",
    "eslint": "^7.7.0",
    "eslint-config-airbnb-typescript": "^9.0.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jest": "^23.20.0",
    "eslint-plugin-jest-dom": "^3.1.7",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.20.6",
    "eslint-plugin-react-hooks": "^4.1.0",
    "eslint-plugin-testing-library": "^3.6.0",
    "eslint-plugin-unicorn": "^21.0.0",
    "hint": "^6.0.7",
    "husky": "^4.2.5",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^26.4.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-is": "^16.13.1",
    "react-test-renderer": "^16.13.1",
    "rimraf": "^3.0.2",
    "rollup": "^2.26.3",
    "typescript": "^3.9.7",
    "url-loader": "^4.1.0",
    "webpack": "^4.44.1"
  }
}
