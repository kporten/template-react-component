{
  "name": "template-react-component",
  "version": "2.3.2",
  "private": false,
  "license": "MIT",
  "description": "Template to develop a React component",
  "repository": "https://github.com/kporten/template-react-component.git",
  "bugs": "https://github.com/kporten/template-react-component/issues",
  "author": "Kevin Porten <hello@kevinporten.dev>",
  "scripts": {
    "start": "start-storybook --port 9009",
    "start:ci": "start-storybook --ci --quiet --port 9009",
    "test": "jest --watch --notify",
    "test:all": "jest --watchAll --coverage --notify",
    "test:ci": "jest --ci --runInBand --coverage",
    "e2e": "cypress open",
    "e2e:run": "cypress run --record",
    "e2e:ci": "start-server-and-test start:ci 9009 e2e:run",
    "lint": "eslint --ignore-path .gitignore --ext .js,.jsx,.ts,.tsx .",
    "hint": "hint ./src/lib",
    "type-check": "tsc --project ./tsconfig.json && tsc --project ./cypress/tsconfig.json",
    "changelog": "auto-changelog --package --template keepachangelog --sort-commits relevance",
    "build": "rimraf dist && rollup -c",
    "build:storybook": "build-storybook",
    "commit": "git-cz",
    "version": "yarn build && yarn changelog && git add CHANGELOG.md",
    "postversion": "git push --follow-tags && yarn publish --non-interactive"
  },
  "main": "./dist/lib/index.cjs.js",
  "module": "./dist/lib/index.es.js",
  "files": [
    "dist/lib"
  ],
  "dependencies": {},
  "peerDependencies": {
    "react": "*",
    "react-dom": "*"
  },
  "devDependencies": {
    "@babel/core": "^7.11.6",
    "@babel/preset-env": "^7.11.5",
    "@babel/preset-react": "^7.10.4",
    "@babel/preset-typescript": "^7.10.4",
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@rollup/plugin-commonjs": "^15.1.0",
    "@rollup/plugin-node-resolve": "^9.0.0",
    "@rollup/plugin-url": "^5.0.1",
    "@storybook/addon-a11y": "^6.0.26",
    "@storybook/addon-actions": "^6.0.26",
    "@storybook/addon-backgrounds": "^6.0.26",
    "@storybook/addon-controls": "^6.0.26",
    "@storybook/addon-docs": "^6.0.26",
    "@storybook/addon-toolbars": "^6.0.26",
    "@storybook/addon-viewport": "^6.0.26",
    "@storybook/addons": "^6.0.26",
    "@storybook/react": "^6.0.26",
    "@storybook/theming": "^6.0.26",
    "@svgr/rollup": "^5.4.0",
    "@testing-library/cypress": "^7.0.1",
    "@testing-library/dom": "^7.24.4",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.0.4",
    "@testing-library/react-hooks": "^3.4.2",
    "@testing-library/user-event": "^12.1.7",
    "@types/jest": "^26.0.14",
    "@types/react": "^16.9.51",
    "@types/react-dom": "^16.9.8",
    "@typescript-eslint/eslint-plugin": "^4.4.0",
    "@typescript-eslint/parser": "^4.4.0",
    "@wessberg/rollup-plugin-ts": "^1.3.5",
    "auto-changelog": "^2.2.1",
    "babel-plugin-module-resolver": "^4.0.0",
    "commitizen": "^4.2.1",
    "cypress": "^5.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.10.0",
    "eslint-config-airbnb-typescript": "^11.0.0",
    "eslint-config-prettier": "^6.12.0",
    "eslint-plugin-cypress": "^2.11.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.0",
    "eslint-plugin-jest-dom": "^3.2.3",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.21.3",
    "eslint-plugin-react-hooks": "^4.1.2",
    "eslint-plugin-testing-library": "^3.9.0",
    "eslint-plugin-unicorn": "^22.0.0",
    "hint": "^6.1.0",
    "husky": "^4.3.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^26.5.2",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-is": "^16.13.1",
    "react-test-renderer": "^16.13.1",
    "rimraf": "^3.0.2",
    "rollup": "^2.28.2",
    "rollup-plugin-subpath-externals": "^3.4.0",
    "start-server-and-test": "^1.11.5",
    "typescript": "^4.0.3"
  }
}
